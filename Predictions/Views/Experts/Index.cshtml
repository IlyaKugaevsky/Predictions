@model IEnumerable<Predictions.Models.Expert>

@{
    ViewBag.Title = "Index";
}

<h1>Турнирная таблица</h1>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-body">
                    <table class="table hover" id="results">
                        <thead>
                            <tr>
                                <th>Эксперт</th>
                                <th>Угадан счет</th>
                                <th>Угадана разница</th>
                                <th>Угадан исход</th>
                                <th>Сумма</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nickname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Scores)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Differences)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Outcomes)
                                    </td>
                                    <td class="success">
                                        @Html.DisplayFor(modelItem => item.Sum)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        @Html.ActionLink("Посмотреть расчеты", "PredictionsDisplay", "Predictions", new { selectedTourId = 1 }, new { @class = "btn btn-primary pull-right" })
    </div>
</div>

@* Load datatable css *@
<link href="//cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" rel="stylesheet" />
@section Scripts{
    @* Load DataTable js here *@
    <script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#results').DataTable({
                "paging": false,
                "info": false,
                "filter": false,
            });
        });
    </script>
}


