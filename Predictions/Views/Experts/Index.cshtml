<script>
        $(document).ready(function () {
            var t = $('#results').DataTable({
                "columnDefs": [ {
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                } ],
                "paging": false,
                "info": false,
                "filter": false,
                "order": [[5, "desc"]]
            });

            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
</script>
