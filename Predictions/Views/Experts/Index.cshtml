@model IEnumerable<Predictions.Models.Expert>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nickname)
        </th>
        <th>Сумма</th>
        <th>Угадан счет</th>
        <th>Угадана разница</th>
        <th>Угадан исход</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nickname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Scores)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Differences)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Outcomes)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ExpertId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ExpertId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ExpertId })
        </td>
    </tr>
}

</table>
