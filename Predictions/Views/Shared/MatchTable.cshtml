@model Predictions.ViewModels.MatchTableViewModel


<table class="table table-hover">
    <tbody>
        <tr>
            @foreach (var item in Model.Headers)
            {
                <th>@item</th>
            }
        </tr>
        @for (int i = 0; i < Model.Rows.Count(); i++)
        {
            <tr>
                <td>@Model.Rows[i].MatchInfo.Date</td>
                <td>@Model.Rows[i].MatchInfo.HomeTeamTitle</td>
                <td>@Model.Rows[i].MatchInfo.AwayTeamTitle</td>
                @*<td>
                    @if (@Model.Rows[i].EditableItem.Editable) {@Html.EditorFor(@model => @Model.Rows[i].EditableItem.Item)}
                    else {@Html.DisplayFor(@model => @Model.Rows[i].EditableItem.Item)}
                </td>
                <td>
                    @Model.Rows[i].Content
                </td>*@
            </tr>
        }
    </tbody>
</table>
