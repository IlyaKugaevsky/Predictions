@model Predictions.ViewModels.AddPredictionsViewModel

@{
    ViewBag.Title = "AddPrediction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактор прогнозов</h1>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            @Html.AntiForgeryToken()
            <h2>@Model.TourInfo.TourId Тур</h2>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "addPredictionsForm" }))
            {
                @Html.HiddenFor(model => Model.TourInfo.TourId)
                <div class="panel panel-default">
                    <div class="panel-body">
                        @Html.PartialFor(m => m.MatchTable, "MatchTable")
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.DropDownListFor(model => model.SelectedExpertId, Model.Expertlist, new { @class = "selectpicker", @data_width = "auto", @title = "Выбрать эксперта" })
                            <input type="submit" class="btn btn-info" name="action:ShowPredictions" value="Показать прогнозы">
                            <div class="pull-right">
                                <input type="submit" class="btn btn-danger" name="action:AddPredicions" value="Сохранить">
                            </div>                        
                        </div>                    
                    </div>
                </div>
            }
            <div>
                @Html.ActionLink("Назад к расписанию", "Index", new { }, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
</div>




