@model Predictions.ViewModels.EditTourViewModel
@{
    ViewBag.Title = "EditTour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Тур @Model.TourInfo.TourId</h2>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="panel panel-default">
                <div class="panel-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "editTourForm", @class = "form-horizontal" }))
                    {
                        @Html.HiddenFor(model => model.TourInfo.TourId)
                        <div class="form-group">
                            <label for="editStartDate" class="col-sm-2 control-label">Старт тура</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => Model.TourInfo.StartDate, new { htmlAttributes = new { @class = "form-control", id = "editStartDate" } })
                                @Html.ValidationMessageFor(model => model.TourInfo.StartDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="editEndDate" class="col-sm-2 control-label">Конец тура</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => Model.TourInfo.EndDate, new { htmlAttributes = new { @class = "form-control", @id = "editEndDate" } })
                                @Html.ValidationMessageFor(model => model.TourInfo.EndDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" name="action:SaveTourSettings" class="btn btn-info">Сохранить</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    @{
                        Html.RenderPartial("AddMatch");
                    }
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    @Html.PartialFor(m => m.MatchTable, "MatchTable")
                </div>
            </div>
            <div>
                @Html.ActionLink("Назад к расписанию", "Index", new { }, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        jQuery.validator.methods.date = function (value, element) {
            var isChrome = /Chrome/.test(navigator.userAgent) && /Google Inc/.test(navigator.vendor);
            if (isChrome) {
                var d = new Date();
                return this.optional(element) || !/Invalid|NaN/.test(new Date(d.toLocaleDateString(value)));
            } else {
                return this.optional(element) || !/Invalid|NaN/.test(new Date(value));
            }
        };
    });
</script>