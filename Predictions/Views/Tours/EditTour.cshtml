@model Predictions.ViewModels.EditTourViewModel

@{
    ViewBag.Title = "EditTour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Тур @Model.Tour.TourId</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.Tour.EndDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Tour.StartDate, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-3">
                        @Html.EditorFor(model => model.Tour.EndDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Tour.EndDate, "", new { @class = "text-danger" })
                    </div>                
                </div>
            </div>
            <div class="panel-body">
                <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>Дата</th>
                                <th>Дома</th>
                                <th>В гостях</th>
                                <th>Счет</th>
                            </tr>
                            @foreach (var item in Model.Tour.Matches)
                            {
                                <tr>
                                    <td>@item.Date</td>
                                    <td>@item.HomeTeam.Title</td>
                                    <td>@item.AwayTeam.Title</td>
                                    <td>@item.Score</td>
                                    <td>@Html.ActionLink("Delete", "Delete", new { id = item.MatchId })</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                <hr />
                <div class="row">
                    <div class="col-md-3 control-group">
                        @Html.HiddenFor(model => model.Tour.TourId, Model.Tour.TourId)
                        @Html.TextBoxFor(model => model.InputDate, new { @class = "form-control datepicker", @type = "date", @data_width = "auto" })
                    </div>
                    <div class="col-md-2">
                        @Html.DropDownListFor(model => model.SelectedHomeTeamId, Model.Teamlist, new { @class = "selectpicker span-2", @data_width = "auto", @title = "Дома" })
                    </div>
                    <div class="col-md-2">
                        @Html.DropDownListFor(model => model.SelectedAwayTeamId, Model.Teamlist, new { @class = "selectpicker span-2", @data_width = "auto", @title = "В гостях" })
                    </div>
                    <div class="col-md-1">
                        <input type="submit" class="btn btn-info" value="Добавить матч">
                    </div>
                </div>

            </div>
        </div>
    </div>
}

<div>
    <hr />
    @Html.ActionLink("Back to List", "Index")
</div>
