@model IEnumerable<Predictions.Models.Tour>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Расписание по турам</h1>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            @for (var i = 0; i < Model.Count(); i++)
            {
                @Html.Partial("Tour", Model.ElementAt(i))
            }
        </div>
    </div>
</div>


