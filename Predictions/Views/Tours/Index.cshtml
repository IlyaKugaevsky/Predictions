@model IEnumerable<Predictions.Models.Tour>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Расписание по турам</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @for (var i = 0; i < Model.Count(); i++)
        {
            <div class="container">
                <h2>@Model.ElementAt(i).TourId Тур</h2>
                <div class="panel panel-default">
                    <div class="panel-heading">@Model.ElementAt(i).StartDate - @Model.ElementAt(i).EndDate</div>
                    <div class="panel-body">
                        <div class="col-md-10">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th>Дата</th>
                                        <th>Дома</th>
                                        <th>В гостях</th>
                                        <th>Счет</th>
                                    </tr>
                                    @foreach (var item in Model.ElementAt(i).Matches)
                                    {
                                        <tr>
                                            <td>@item.Date</td>
                                            <td>@item.HomeTeam.Title</td>
                                            <td>@item.AwayTeam.Title</td>
                                            <td>@item.Score</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-2">
                            <div class="btn-group-justified" role="group">
                                <div class="row">
                                    @Html.ActionLink("Редактор тура", "EditTour",
                                    new { id = Model.ElementAt(i).TourId },
                                    new { @class = "btn btn-sm btn-info", @role = "group"})
                                </div>

                                <div class="row top-buffer">
                                    @Html.ActionLink("Редактор прогнозов", "AddPredictions",
                                    new { id = Model.ElementAt(i).TourId },
                                    new { @class = "btn btn-sm btn-info" })
                                </div>
                                <div class="row top-buffer">
                                    @Html.ActionLink("Редактор результатов", "AddScores",
                                    new { id = Model.ElementAt(i).TourId },
                                    new { @class = "btn btn-sm btn-info" })
                                </div>
                                <div class="row top-buffer">
                                    @Html.ActionLink("Посчитать прогнозы", "SubmitTourPredictions",
                                    new { id = Model.ElementAt(i).TourId },
                                    new { @class = "btn btn-sm btn-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}