@model IEnumerable<Predictions.Models.Tour>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Расписание по турам</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
            @for (var i = 0; i <= Model.Count() - 1; i++)
            {
                <div class="container">
                    <h2>@Model.ElementAt(i).TourId Тур</h2>
                    <div class="panel panel-default">
                        <div class="panel-heading">@Model.ElementAt(i).StartDate - @Model.ElementAt(i).EndDate</div>
                        <div class="panel-body">
                            <div class="col-md-7">
                                <table class="table table-hover">
                                    <tbody>
                                        <tr>
                                            <th>Дата</th>
                                            <th>Дома</th>
                                            <th>В гостях</th>
                                        </tr>
                                        @foreach (var item in Model.ElementAt(i).Matchlist)
                                        {
                                            <tr>
                                                <td>@item.Date</td>
                                                <td>@item.HomeTeam.Title</td>
                                                <td>@item.AwayTeam.Title</td>
                                                <td>@Html.ActionLink("Delete", "Delete", new { id = item.MatchId })</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-md-5">
                                @Html.ActionLink("Редактировать тур", "EditTour", 
                               new { id = Model.ElementAt(i).TourId },
                               new { @class = "btn btn-sm btn-info" }) 
                                <button type="button" class="btn btn-primary btn-sm">Добавить прогноз</button>
                                <button type="button" class="btn btn-primary btn-sm">Добавить результаты</button>
                            </div>
                        </div>
                    </div>
                </div>
            }

