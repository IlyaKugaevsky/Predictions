@model Predictions.ViewModels.MatchesViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Матчи</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-2"><span class="label label-default">Дата</span></div>
            <div class="col-md-2"><span class="label label-default">Дома</span></div>
            <div class="col-md-2"><span class="label label-default">В гостях</span></div>
        </div>
        <div class="row">
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.Date, new { @class = "form-control datepicker", @type = "date" })
            </div>
            <div class="col-md-2">
                @Html.DropDownListFor(model => model.HomeTeamId, new SelectList(Model.Teamlist, "TeamId", "Title"), new { @class = "form-control", placeholder = "Дома" })
            </div>
            <div class="col-md-2">
                @Html.DropDownListFor(model => model.AwayTeamId, new SelectList(Model.Teamlist, "TeamId", "Title"), new { @class = "form-control", placeholder = "В гостях" })
            </div>
            <div class="col-md-2">
                <input type="submit" class="btn btn-info" value="Добавить матч">
            </div>
        </div>
    </div>
}


